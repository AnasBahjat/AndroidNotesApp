<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Sorting Order : "
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/sortByCreationDate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="254dp"
            android:layout_height="42dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="3dp"
            android:text="Sort By Creation Date"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sortAlphabetically"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_sort_by_alpha_24" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="3dp"
            android:text="Sort Alphabetically"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>