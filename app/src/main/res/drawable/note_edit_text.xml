<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/note_shape.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer (white) -->
    <item android:drawable="@android:color/white" />

    <!-- Line pattern layer -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFE0" /> <!-- Light yellow color for lines -->
        </shape>
    </item>
</layer-list>